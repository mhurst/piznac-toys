generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("MEMBER")
  active    Boolean  @default(true)
  avatar    String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  collection       UserFigure[]
  ownedAccessories UserAccessory[]
  photos    Photo[]
  invitesCreated Invite[] @relation("InviteCreator")
  inviteUsed     Invite?  @relation("InviteUser")
  passwordResets PasswordReset[]
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ToyLine {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  coverImage String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  series    Series[]
  tags      Tag[]
  figures   Figure[]
}

model Series {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String
  toyLineId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  toyLine   ToyLine  @relation(fields: [toyLineId], references: [id], onDelete: Cascade)
  figures   Figure[]

  @@unique([toyLineId, slug])
}

model Tag {
  id        Int         @id @default(autoincrement())
  name      String
  toyLineId Int
  createdAt DateTime    @default(now())
  toyLine   ToyLine     @relation(fields: [toyLineId], references: [id], onDelete: Cascade)
  figures   FigureTag[]

  @@unique([toyLineId, name])
}

model Figure {
  id          Int         @id @default(autoincrement())
  name        String
  year        Int?
  notes       String?
  toyLineId   Int
  seriesId    Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  toyLine     ToyLine     @relation(fields: [toyLineId], references: [id], onDelete: Cascade)
  series      Series      @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  tags        FigureTag[]
  accessories Accessory[]
  photos      Photo[]
  collectors  UserFigure[]
}

model FigureTag {
  figureId Int
  tagId    Int
  figure   Figure @relation(fields: [figureId], references: [id], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([figureId, tagId])
}

model Accessory {
  id       Int     @id @default(autoincrement())
  name     String
  figureId Int
  figure   Figure  @relation(fields: [figureId], references: [id], onDelete: Cascade)
  userStatuses UserAccessory[]
}

model Photo {
  id        Int     @id @default(autoincrement())
  filename  String
  isPrimary Boolean @default(false)
  figureId  Int
  userId    Int?
  figure    Figure  @relation(fields: [figureId], references: [id], onDelete: Cascade)
  user      User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserFigure {
  userId    Int
  figureId  Int
  notes     String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  figure    Figure   @relation(fields: [figureId], references: [id], onDelete: Cascade)
  @@id([userId, figureId])
}

model UserAccessory {
  userId      Int
  accessoryId Int
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessory   Accessory @relation(fields: [accessoryId], references: [id], onDelete: Cascade)
  @@id([userId, accessoryId])
}

model Invite {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  email     String?
  createdById Int
  usedById    Int?     @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  createdBy User     @relation("InviteCreator", fields: [createdById], references: [id])
  usedBy    User?    @relation("InviteUser", fields: [usedById], references: [id])
}
